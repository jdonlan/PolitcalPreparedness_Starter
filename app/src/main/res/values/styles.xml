<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Text Styles -->

    <style name="TextHeader">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitle" parent="TitleText">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="SubText">
        <item name="color">@color/gray50</item>
    </style>

    <style name="BlueHeader" parent="TextHeader">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="BlueSubText" parent="SubText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Link">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
